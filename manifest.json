{
  "manifest_version": 3,
  "name": "Kayko - Protect Your Prompts & Forms üê±",
  "version": "1.1.0",
  "description": "Auto-save your LLM prompts and form data locally. Works across popular AI chat platforms and any website.",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "*://*.openai.com/*",
    "*://*.chatgpt.com/*",
    "*://*.anthropic.com/*",
    "*://*.claude.ai/*",
    "*://*.google.com/*",
    "*://gemini.google.com/*",
    "*://aistudio.google.com/*",
    "*://*.x.ai/*",
    "*://*.grok.com/*",
    "*://*.perplexity.ai/*",
    "*://chat.openai.com/*",
    "*://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/idle-icon.png", "icons/saving-icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}

