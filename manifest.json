{
  "manifest_version": 3,
  "name": "Kayko - Prompt Auto-Save & Recovery",
  "version": "1.0.0",
  "description": "Auto-save your LLM prompts locally. Never lose your carefully crafted prompts again - works on ChatGPT, Claude, Gemini, and more.",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.openai.com/*",
    "*://*.anthropic.com/*",
    "*://*.claude.ai/*",
    "*://*.google.com/*",
    "*://gemini.google.com/*",
    "*://*.x.ai/*",
    "*://*.perplexity.ai/*",
    "*://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.openai.com/*",
        "*://*.anthropic.com/*",
        "*://*.claude.ai/*",
        "*://*.google.com/*",
        "*://gemini.google.com/*",
        "*://*.x.ai/*",
        "*://*.perplexity.ai/*",
        "*://chat.openai.com/*",
        "*://*/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

